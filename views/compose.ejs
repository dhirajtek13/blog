<%- include('partials/header') %>

<h1>Composer</h1>

<form action="/compose" method="post" class="">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" id="compose" class="form-control">
    </div>
    <div class="form-group">
        <label for="post">Post</label>
        <textarea name="postBody" id="" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
    
</form>

